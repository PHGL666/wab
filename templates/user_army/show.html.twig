{% extends 'base.html.twig' %}

{% block title %}UserArmy{% endblock %}

{% block body %}
    <h1>UserArmy</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Army_points</th>
                <td>{{ user_army.armyPoints }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user_army.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_army_index') }}">back to list</a>

    <a href="{{ path('user_army_edit', {'id': user_army.id}) }}">edit</a>
    
    {{ include('user_army/_delete_form.html.twig') }}

    <h2>Les unités de {{ user_army.army.name }}</h2>

    <ul>
        {% for unit in user_army.army.units %}
            <li>{{ unit.name }}</li>
        {% endfor %}
    </ul>

    <h2>Mes unités</h2>

    <ul>
        {% for userArmyUnit in user_army.userArmyUnits %}
            <li>{{ userArmyUnit.unit.name }}</li>
        {% endfor %}
    </ul>

{% endblock %}
